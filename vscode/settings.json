{
    "telemetry.telemetryLevel": "crash",
    "terminal.external.osxExec": "Alacritty.app",
    "terminal.integrated.fontFamily": "Hack Nerd Font Mono",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "vim.leader": ",",
    "vim.normalModeKeyBindings": [
        {
            "before": [
                "<down>"
            ],
            "after": [
                "<C-e>"
            ]
        },
        {
            "before": [
                "<up>"
            ],
            "after": [
                "<C-y>"
            ]
        },
        {
            "before": [
                "<leader>",
                "b"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": [
                "<leader>",
                "@"
            ],
            "commands": [
                ":nohl"
            ]
        },
        {
            "before": [
                "<leader>",
                "l",
                "D"
            ],
            "commands": [
                "editor.action.revealDeclaration"
            ]
        },
        {
            "before": [
                "<leader>",
                "l",
                "d"
            ],
            "commands": [
                "editor.action.revealDefinition"
            ]
        },
        {
            "before": [
                "<leader>",
                "l",
                "h"
            ],
            "commands": [
                "editor.action.showHover"
            ]
        },
        {
            "before": [
                "<leader>",
                "l",
                "i"
            ],
            "commands": [
                "editor.action.goToImplementation"
            ]
        },
        {
            "before": [
                "<leader>",
                "l",
                "k"
            ],
            "commands": [
                "editor.action.peekDeclaration"
            ]
        },
        {
            "before": [
                "<leader>",
                "l",
                "t"
            ],
            "commands": [
                "editor.action.goToTypeDefinition"
            ]
        },
        {
            "before": [
                "<leader>",
                "l",
                "r"
            ],
            "commands": [
                "editor.action.rename"
            ]
        },
        {
            "before": [
                "<leader>",
                "l",
                "a"
            ],
            "commands": [
                "editor.action.quickFix"
            ]
        },
        {
            "before": [
                "<leader>",
                "l",
                "x"
            ],
            "commands": [
                "editor.action.goToReferences"
            ]
        },
        {
            "before": [
                "<leader>",
                "l",
                "f"
            ],
            "commands": [
                "editor.action.formatDocument"
            ]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "<leader>",
                "l",
                "f"
            ],
            "commands": [
                "editor.action.formatSelection"
            ]
        }
    ],
    "vim.hlsearch": true,
    "vim.foldfix": true,
    "editor.lineNumbers": "relative",
    "editor.fontFamily": "Hack Nerd Font Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.autoIndent": "full",
    "editor.detectIndentation": true,
    "editor.rulers": [
        100
    ],
    "editor.cursorSurroundingLines": 3,
    "editor.renderWhitespace": "boundary",
    "editor.minimap.enabled": false,
    "editor.inlineSuggest.enabled": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "workbench.colorCustomizations": {
        "[Abyss]": {
            "editor.foreground": "#cacaff",
            "editor.background": "#00002a",
            "editor.selectionBackground": "#b6b",
            "editor.lineHighlightBackground": "#2a002a",
            "sideBar.background": "#00002a",
            "statusBar.background": "#00002a",
            "tab.activeBackground": "#00003a",
            "tab.activeForeground": "#cacaff",
            "tab.inactiveBackground": "#00002a",
            "list.activeSelectionBackground": "#e6e",
            "list.inactiveSelectionBackground": "#939",
            "list.focusBackground": "#2a002a",
            "titleBar.activeBackground": "#00002a",
            "titleBar.inactiveBackground": "#00002a"
        }
    },
    "editor.tokenColorCustomizations": {
        "[Abyss]": {
            "comments": "#55c",
            "functions": "#0af",
            "keywords": "#e6e",
            "numbers": "#f90",
            "strings": "#7e7",
            "types": {
                "fontStyle": ""
            },
            "variables": "#cacaff",
            "textMateRules": [
                {
                    "scope": "keyword.operator",
                    "settings": {
                        "foreground": "#f0f"
                    }
                },
                {
                    "scope": "constant.character.escape",
                    "settings": {
                        "foreground": "#6df",
                        "fontStyle": "bold"
                    }
                },
                {
                    "scope": "punctuation.separator",
                    "settings": {
                        "foreground": "#cacaff",
                        "fontStyle": ""
                    }
                }
            ]
        }
    },
    "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "[Abyss]": {
            "enabled": true,
            "rules": {
                "*.constant": "#f90",
                "*.static": "#ff0",
                "builtinConstant": "#f90",
                "class": "#f0a",
                "decorator": "#0af",
                "formatSpecifier": "#cacaff",
                "interface": "#f0a",
                "macro": "#aaf",
                "method.static": "#0af",
                "module": {
                    "foreground": "#cacaff",
                    "fontStyle": ""
                },
                "namespace": {
                    "foreground": "#cacaff",
                    "fontStyle": ""
                },
                "struct": "#f0a",
                "parameter": "#6df"
            }
        },
        "[Base16 Outrun Dark]": {
            "rules": {
                "variable": "#cacaff"
            }
        }
    },
    "workbench.colorTheme": "Abyss",
    "cmake.statusbar.visibility": "icon",
    "cmake.showOptionsMovedNotification": false,
    "base16.generator.activatedThemes": [
        "base16-outrun-dark",
        "base16-outrun-light"
    ],
    "dotfiles.targetPath": "~/.dotfiles",
    "dotfiles.repository": "acidghost/dotfiles",
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "github.copilot.editor.enableAutoCompletions": true,
    "notebook.output.textLineLimit": 100,
    "notebook.output.scrolling": true,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "right"
    },
    "settingsSync.ignoredSettings": [
        "-dev.containers.dockerPath"
    ],
    "[python]": {
        "diffEditor.ignoreTrimWhitespace": false,
        "editor.formatOnType": true,
        "editor.wordBasedSuggestions": "off"
    }
}
